<Window x:Class="WarThunderParser.AskGraphNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задайте имя графика" SizeToContent="WidthAndHeight" MinWidth="240" MinHeight="120" Background="Lavender" WindowStyle="ToolWindow">
    <StackPanel>
        <StackPanel.Resources>
            <Style BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" TargetType="Button"></Style>
        </StackPanel.Resources>
        <GroupBox Header="Имя">
        <TextBox Padding="5,2,5,2" Name ="GraphNameTextBox"  FontSize="15" MinWidth="200" HorizontalAlignment="Center" Margin="5"></TextBox>
        </GroupBox>
        <StackPanel Margin="5" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Принять" Margin="0,5,0,0" Click="Button_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
